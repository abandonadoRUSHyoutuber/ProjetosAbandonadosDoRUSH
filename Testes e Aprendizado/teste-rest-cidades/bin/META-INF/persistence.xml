<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="rest-cidades" transaction-type="RESOURCE_LOCAL">  
    	<provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<mapping-file>META-INF/orm.xml</mapping-file>
    	<class>mior.dev.entidade.Cidade</class>  
        <properties>
       		<property name="hibernate.archive.autodetection" value="class" />
       		 
            <!-- ConexÃ£o com o banco de dados -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/rest-cidades" />
			<property name="hibernate.connection.user" value="comercio" />
			<property name="hibernate.connection.password" value="comerciopwd" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
 
            <!--Configuracoes de Debug-->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="use_sql_comments" value="true" />
			
		</properties>
    </persistence-unit>
</persistence>